+		buffer = strcat(buffer, id);
+		buffer = strcat(buffer, ",");
+		matricula = strcpy(matricula, c->matricula);
+		buffer = strcat(buffer, matricula);
+                buffer = strcat(buffer, ",");
+		marca = strcpy(marca, c->marca);
+		buffer = strcat(buffer, marca);
